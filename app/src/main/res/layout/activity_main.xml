<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    >


        <!-- Título da tela -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergência SAMU"
            android:textSize="30sp"
            android:textColor="#E60000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Informação de número do SAMU -->
        <TextView
            android:id="@+id/tvSamuNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número SAMU: 192"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/tvTitulo"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

        <!-- Botão de ligar para o SAMU -->
        <Button
            android:id="@+id/btnLigarSamu"
            android:layout_width="wrap_content"
            android:textSize="35dp"
            android:layout_height="wrap_content"
            android:text="Ligar para SAMU"
            android:backgroundTint="#FF0000"
            android:textColor="#ffffff"
            android:layout_below="@id/tvSamuNumber"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:onClick="ligarSamu"/>

        <!-- Botão de emergência S.O.S. -->
        <Button
            android:id="@+id/btnSOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.O.S.!"
            android:textSize="55dp"
            android:textColor="#ffffff"
            android:backgroundTint="#FF0000"
            android:layout_below="@id/btnLigarSamu"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:onClick="chamartela"/>

        <!-- Informações sobre primeiros socorros -->
        <TextView
            android:id="@+id/tvInformacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primeiros Socorros"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/btnSOS"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true" />

        <!-- Lista de dicas de primeiros socorros -->
        <TextView
            android:id="@+id/tvDicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• RCP em caso de parada cardíaca\n• Como estancar hemorragias\n• Manobras de desengasgo"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_below="@id/tvInformacoes"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

